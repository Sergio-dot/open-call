<div class="container position-absolute top-50 start-50 translate-middle p-5 rounded-4">

    <div id="loginForm">
        <form action="/login" method="post">
            <div class="text-center">
                <h1 class="mb-3">Sign in</h1>
            </div>

            <!-- Email input -->
            <div class="input-group mb-3">
                <span class="input-group-text justify-content-center"><i class="fa-solid fa-at"></i></span>
                <div class="form-floating">
                    <input type="email" class="form-control" id="loginEmail" name="loginEmail" placeholder="Enter email"
