                        lockPassword[i].classList.remove("fa-lock-open");
                        document.getElementById("signupPassword").type = "password";
                    }
                }
            }
        });
    }

    // Switch between sign up form and sign in form
    const switchForm = document.getElementsByClassName("switch-form");
    for (let i = 0; i < switchForm.length; i++) {
        switchForm[i].addEventListener("click", function () {
            if (document.getElementById("loginForm").style.display === 'none') {
                document.getElementById("signupForm").style.display = 'none';
                document.getElementById("loginForm").style.display = 'block';
            } else {
                document.getElementById("loginForm").style.display = 'none';
                document.getElementById("signupForm").style.display = 'block';
            }
        });
    }

    // Login with Google
    document.getElementById("googleLogin").addEventListener("click", () => {
        window.location.replace("/login/google");
    })
</script>